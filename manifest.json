{
   "name": "Hot keys for Spotify Web Player",
   "description": "Add keyboard shortcuts for Spotify Web Player",
   "version": "1.0",
   "manifest_version": 2,

   "background": {
      "persistent": false,
      "scripts": [ "background.js" ]
   },
   "commands": {
      "next": {
         "description": "Next track",
         "suggested_key": "Alt+3"
      },
      "play-pause": {
         "description": "Play/pause",
         "suggested_key": "Alt+2"
      },
      "previous": {
         "description": "Previous track",
         "suggested_key": "Alt+1"
      },
      "save-to-library": {
        "description": "Save to library"
      },
      "shuffle": {
        "description": "Shuffle",
        "suggested_key": "Alt+4"
      }
   },
   "permissions": [
    "https://open.spotify.com/*",
    "https://play.spotify.com/*"
  ]
}
